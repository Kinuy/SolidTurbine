{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SolidTurbine (macOS - LLDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/solidturbine",
            "args": [
                "${workspaceFolder}/testdata/ProjectData.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/testdata",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "CMake: Build"
        },
        {
            "name": "Debug SolidTurbine (Linux - GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/solidturbine",
            "args": [
                "${workspaceFolder}/testdata/ProjectData.dat"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/testdata",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
